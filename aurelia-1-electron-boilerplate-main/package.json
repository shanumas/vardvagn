{
  "name": "aurelia-electron-builder-boilerplate",
  "description": "An Aurelia client application.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pete-hotchkiss/aurelia-1-electron-boilerplate.git"
  },
  "main": "main.js",
  "license": "MIT",
  "dependencies": {
    "aurelia-animator-css": "^1.0.4",
    "aurelia-bootstrapper": "^2.3.3",
    "electron-serve": "^1.1.0",
    "bootstrap": "^4.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "app-settings-loader": "^1.0.6",
    "aurelia-cli": "^2.0.2",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "aurelia-testing": "^1.0.0",
    "aurelia-webpack-plugin": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^6.0.0",
    "copy-webpack-plugin": "^6.4.0",
    "css-loader": "^5.0.1",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "eslint": "^7.18.0",
    "expose-loader": "^1.0.3",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^1.3.4",
    "minimatch": "^3.0.4",
    "promise-polyfill": "^8.2.0",
    "sass": "^1.32.8",
    "sass-loader": "10.1.1",
    "style-loader": "^2.0.0",
    "tree-kill": "^1.2.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "wait-on": "^5.2.1",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "build": "webpack --env.production --extractCss --define process.env.BUILD_ENVIRONMENT='\"app\"'",
    "dev:local": "webpack-dev-server --env.local --extractCss --define process.env.BUILD_ENVIRONMENT='\"web\"'",
    "start": "webpack-dev-server --extractCss --define process.env.BUILD_ENVIRONMENT='\"app\"'",
    "build:dev": "webpack --extractCss",
    "analyze": "webpack --env.production --analyze",
    "test": "au test",
    "electron": "wait-on http://localhost:8080 && electron .",
    "electron-dev": "concurrently \"yarn run start\" \"yarn run electron\"",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder"
  },
  "engines": {
    "node": ">=10.12.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.(ts|js)$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "build": {
    "appId": "com.yourdomain.app",
    "icon": "static/favicon.png",
    "productName": "Aurelia and Electron Boilerplate App",
    "files": [
      "build/**/*",
      "main.js"
    ],
    "win": {},
    "linux": {},
    "mac": {
      "icon": "static/App.icns"
    }
  }
}
